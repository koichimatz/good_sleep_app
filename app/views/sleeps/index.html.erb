<% @sleeps.each do |sleep| %>
<div>
  <%= link_to sleep_path(sleep.id) do %>
  
  <%= attachment_image_tag sleep, :image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag('sample-author0.jpg') %></p>
  <p>就寝時刻：<%= sleep.bedtime %></p>
  <p>この日の眠りメモ：<%= sleep.opinion %></p>
  <p>ユーザーネーム：<%= sleep.user.name %></p>
</div>
<% end %>